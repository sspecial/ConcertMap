<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/light_blue_background"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context="de.berlin.special.concertmap.event.EventActivityFragment">

    <RelativeLayout
        android:id="@+id/image_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".40"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/event_mobile_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="2dp"
            android:src="@drawable/thrillcall" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linear_event_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/button_attend"
            style="@android:style/Widget.Holo.Light.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/mytheme_btn"
            android:checked="false"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black_brown" />

        <Button
            android:id="@+id/button_artist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/mytheme_btn"
            android:text="Artist(s)"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black_brown" />

        <Button
            android:id="@+id/button_ticket"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/mytheme_btn"
            android:text="Ticket"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black_brown" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_event_info"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginBottom="4dp"
        android:background="@color/blue_sky"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="6dp"
        android:paddingTop="6dp">

        <TextView
            android:id="@+id/textview_event_venue_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:gravity="center_horizontal"
            android:lines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/tablet_title"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview_event_venue_street"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:ellipsize="marquee"
            android:gravity="center_horizontal"
            android:lines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/tablet_address" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/calendar" />

            <TextView
                android:id="@+id/event_item_day_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="9dp"
                android:textColor="@color/black"
                android:textSize="@dimen/tablet_time" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/clock" />

            <TextView
                android:id="@+id/event_item_time_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/tablet_time" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".40"
        android:orientation="vertical">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>
