<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/light_blue_background"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context="de.berlin.special.concertmap.event.ArtistActivityFragment">

    <LinearLayout
        android:id="@+id/atist_image_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".40"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/artist_mobile_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_artist_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/button_favorite"
            style="@android:style/Widget.Holo.Light.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/mytheme_btn"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black_brown" />

        <Button
            android:id="@+id/button_website"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/mytheme_btn"
            android:text="Official Website"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black_brown" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".50"
        android:orientation="vertical">

        <ListView
            android:id="@+id/list_view_artist_events"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:dividerHeight="2dp" />

        <LinearLayout
            android:id="@+id/artistEmptyLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/artistEmptyTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/brown_sky"
                android:gravity="center"
                android:padding="20dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

