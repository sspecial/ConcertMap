<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/light_blue_background"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/fragment_margin"
    style="@android:style/Widget.Holo.Light"
    tools:context="de.berlin.special.concertmap.navigate.SearchArtistFragment">

    <EditText
        android:id="@+id/enter_artist_edit_text"
        android:theme="@android:style/Theme.DeviceDefault"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="125dp"
        android:gravity="center_horizontal"
        android:lines="1"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="19dp" />

    <TextView
        android:id="@+id/artist_comment_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/black_cow"
        android:textSize="16dp" />

    <Button
        android:id="@+id/artist_search_button"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/mytheme_btn"
        android:text="@string/search_key_artist"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/black" />

</LinearLayout>

