<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@android:style/Widget.Holo.Light"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/light_blue_background"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/fragment_margin"
    tools:context="de.berlin.special.concertmap.navigate.CityFragment">

    <LinearLayout
        android:id="@+id/city_view_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:visibility="invisible">

        <TextView
            android:id="@+id/city_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:gravity="center_horizontal" />

        <View
            android:id="@+id/line"
            android:layout_width="250dp"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:background="#ffffff" />

        <ProgressBar
            android:id="@+id/parse_data_progress"
            style="@android:style/Widget.Holo.Light.ProgressBar.Inverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:indeterminate="true" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/search_city_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/enter_city_edit_text"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:lines="1"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="19dp"
            android:theme="@android:style/Theme.DeviceDefault" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"
            android:text="City"/>

        <EditText
            android:id="@+id/enter_country_edit_text"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:lines="1"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="19dp"
            android:theme="@android:style/Theme.DeviceDefault" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"
            android:text="Country (Optional)"/>

        <ImageButton
            android:id="@+id/validate_city_button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:src="@drawable/forward_icon"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@drawable/mytheme_btn"/>

        <TextView
            android:id="@+id/comment_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/search_city_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black_cow"
            android:textSize="16dp" />

    </LinearLayout>

</RelativeLayout>


